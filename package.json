{
    "name": "wss-server",
    "version": "1.0.0",
    "description": "Web socket server",
    "main": "index.js",
    "scripts": {
        "compile": "tsc -p .",
        "start": "NODE_ENV=local NODE_TLS_REJECT_UNAUTHORIZED=0 PORT=3001 concurrently \"tsc -p . -w\" \"nodemon --inspect ./out/index.js\""
    },
    "author": "hsawant@slack-corp.com",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1",
        "socket.io": "^2.3.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/node": "^14.11.2",
        "@types/socket.io": "^2.1.11",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.9.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3"
    },
    "prettier": {
        "tabWidth": 4,
        "useSpaces": true,
        "trailingComma": "none",
        "printWidth": 120,
        "singleQuote": false,
        "arrowParens": "avoid"
    }
}
